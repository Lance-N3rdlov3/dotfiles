#include ./frappe.conf


# bold_font        auto
# italic_font      auto
# bold_italic_font auto
mouse_hide_wait  2.0
cursor_shape     block
show_hyprlink_targets yes
# url_color        #0087bd
url_style        straight
#Close the terminal without confirmation
confirm_os_window_close 0
background_opacity 0.6
font_size 19.0
hide_window_decorations yes


# BEGIN_KITTY_THEME
# bl1nk
include ./themes/catppuccin-frappe.conf
# END_KITTY_THEME

# BEGIN_KITTY_FONTS
font_family      family='Iosevka Nerd Font Mono' postscript_name=IosevkaNFM
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

cursor_trail 2 
cursor_trail_decay 0.1 0.3
cursor_trail_start_threshold 2 
map f5 load_config_file /Users/nrd/.config/kitty/kitty.conf
shell_integration no-cursor
copy_on_select clipboard
map shift+cmd+v paste_from_clipboard
mouse_map middle release ungrabbed paste_from_selection
mouse_map left doublepress ungrabbed mouse_selection word
mouse_map left triplepress ungrabbed mouse_selection line
mouse_map ctrl+shift+right press ungrabbed mouse_show_command_output

sync_to_monitor yes

bell_on_tab "ðŸ”” "

draw_minimal_borders yes

tab_bar_edge bottom
tab_bar_style powerline
tab_bar_min_tabs 1 
tab_powerline_style round
#tab_title_template "{fmt.fg.red}{bell_symbol}{activity_symbol}{fmt.fg.tab}{title}"
allow_hyperlinks yes
shell_integration enabled
clone_source_strategies venv,conda,env_var,path
term xterm-kitty
menu_map global "Actions::Launch something special" launch --hold --type=os-window sh -c "echo hello world"
macos_option_as_alt yes
macos_quit_when_last_window_closed yes
macos_window_resizable yes
macos_show_window_title_in menubar
kitty_mod ctrl+shift
map kitty_mod+n launch_tab nvim
map kitty_mod+y new_window less @selection 
map ctrl+shift+g show_last_command_output
map ctrl+shift+right next_tab
map shift+cmd+] next_tab ðŸŽ
map ctrl+tab next_tab
map ctrl+shift+left previous_tab
map shift+cmd+[ previous_tab ðŸŽ
map ctrl+shift+tab previous_tab
map ctrl+shift+t new_tab
map cmd+t new_tab ðŸŽ
map ctrl+shift+q close_tab
map cmd+w close_tab ðŸŽ
map shift+cmd+w close_os_window ðŸŽ
map ctrl+alt+1 goto_tab 1
map ctrl+alt+2 goto_tab 2 
map ctrl+alt+3 goto_tab 3
map ctrl+alt+4 goto_tab 4
map ctrl+shift+l next_layout
map ctrl+alt+t goto_layout tall
map ctrl+alt+s goto_layout stack
map ctrl+shift+e open_url_with_hints
map ctrl+shift+p>f kitten hints --type path --program -
map ctrl+shift+p>shift+f kitten hints --type path
map ctrl+shift+escape kitty_shell os-window
